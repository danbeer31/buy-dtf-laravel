# ------------------------------------------------------------
# Laravel / PHPStorm / Node / OS - Complete .gitignore
# ------------------------------------------------------------

# Environment / secrets
.env
.xml
!.env.example

# Dependencies
/vendor/
/node_modules/

# Laravel caches / runtime
/bootstrap/cache/
/storage/*.key
/storage/app/public/
/storage/framework/
/storage/logs/

# Keep these so folders exist in repo
!/storage/.gitignore
!/storage/app/.gitignore
!/storage/app/public/.gitignore
!/storage/framework/.gitignore
!/storage/framework/cache/.gitignore
!/storage/framework/sessions/.gitignore
!/storage/framework/testing/.gitignore
!/storage/framework/views/.gitignore
!/storage/logs/.gitignore

# Built assets (Vite)
/public/build/
/public/hot

# Uploads (choose one policy)
# If you store user uploads in public/uploads, do NOT commit them:
public/uploads/
public/uploads/**

# Server / host specific
public/.user.ini
public/info.php

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# IDEs
.idea/
.vscode/
*.iml

# OS junk
.DS_Store
Thumbs.db
desktop.ini

# Tests output / coverage
/coverage/
/.tmp/
/tmp/

# Composer / PHP
composer.phar
.phpunit.result.cache

# Node / Vite misc
.eslintcache
.parcel-cache/
.cache/
dist/
build/
.idea/
*.iml
dataSources.xml
deployment.xml
frameworkDescriptionVersion*.xml
laravel-idea*.xml
modules.xml
php.xml
phpunit.xml
sshConfigs.xml
vcs.xml
webServers.xml
public/build/
public/build/*
public/.user.ini
